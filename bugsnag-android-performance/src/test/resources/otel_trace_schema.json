{
  "type": "object",
  "properties": {
    "resourceSpans": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ResourceSpan"
      }
    }
  },
  "$defs": {
    "ResourceSpan": {
      "type": "object",
      "properties": {
        "scopeSpans": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ScopeSpan"
          }
        },
        "schemaUrl": {
          "type": "string"
        }
      }
    },
    "ScopeSpan": {
      "type": "object",
      "properties": {
        "spans": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Span"
          }
        }
      }
    },
    "Span": {
      "type": "object",
      "properties": {
        "traceId": {
          "type": "string",
          "format": "hex",
          "pattern": "^[0-9a-fA-F]{32}$"
        },
        "spanId": {
          "type": "string",
          "format": "hex",
          "pattern": "^[0-9a-fA-F]{16}$"
        },
        "traceState": {
          "type": "string"
        },
        "parentSpanId": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{16}$"
        },
        "name": {
          "type": "string"
        },
        "kind": {
          "type": "string",
          "enum": [
            "SPAN_KIND_UNSPECIFIED",
            "SPAN_KIND_INTERNAL",
            "SPAN_KIND_SERVER",
            "SPAN_KIND_CLIENT",
            "SPAN_KIND_PRODUCER",
            "SPAN_KIND_CONSUMER"
          ]
        },
        "startTimeUnixNano": {
          "type": "string",
          "pattern": "^-?[0-9]+$"
        },
        "endTimeUnixNano": {
          "type": "string",
          "pattern": "^-?[0-9]+$"
        }
      }
    }
  }
}